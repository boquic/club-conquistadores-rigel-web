---
import { Image } from 'astro:assets';
import rigelLogo from '../assets/rigel.png';

const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Quienes somos', href: '/quienes-somos' },
  { name: 'Historia', href: '/historia' },
  { name: 'Recursos', href: '/recursos' },
  { name: 'Contacto', href: '/contacto' },
];
---

<header id="main-header" class="header">
  <div class="container header-container">
    <a href="/" class="logo-link">
      <Image src={rigelLogo} alt="Club Rigel" class="logo-img" />
    </a>

    <!-- Desktop Nav: Floating Pill -->
    <nav class="desktop-nav">
      <ul class="nav-pill">
        {navItems.map(item => (
          <li>
            <a href={item.href} class={`nav-link ${Astro.url.pathname === item.href ? 'active' : ''}`}>
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Mobile Toggle -->
    <button id="mobile-toggle" class="mobile-toggle" aria-label="MenÃº">
      <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </button>
  </div>

  <!-- Mobile Nav Overlay -->
  <nav id="mobile-nav" class="mobile-nav">
    <ul class="mobile-nav-list">
      {navItems.map(item => (
        <li><a href={item.href} class="mobile-nav-link">{item.name}</a></li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 2rem 0;
    transition: padding 0.3s ease;
  }

  .header.scrolled {
    padding: 1rem 0;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo-img {
    height: 80px;
    width: auto;
    filter: drop-shadow(0 4px 6px rgba(0,0,0,0.2));
    transition: start 0.3s ease;
  }

  .header.scrolled .logo-img {
    height: 60px;
  }

  /* Desktop Nav - Pill Design */
  .desktop-nav {
    display: none;
  }

  @media (min-width: 850px) {
    .desktop-nav {
      display: block;
    }
  }

  .nav-pill {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    list-style: none;
    gap: 0.5rem;
    box-shadow: 0 10px 25px -5px rgba(0,0,0,0.15), 0 5px 10px -5px rgba(0,0,0,0.1);
  }

  .nav-link {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    border-radius: 30px;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-secondary);
    background: rgba(0,0,0,0.03);
  }

  /* Active State - Dark Pill styling from prototype reference if 'Inicio' was selected */
  .nav-link.active { 
    background: var(--color-primary);
    color: white;
  }
  
  /* Apply dark bg to the first item specifically if needed to match image exactly, 
     but logic-based active state is better. 
     Prototype shows "Inicio" with a dark background.
  */
  
  /* Mobile Toggle */
  .mobile-toggle {
    display: block;
    background: white;
    padding: 10px;
    border-radius: 50%;
    box-shadow: var(--shadow-md);
  }

  @media (min-width: 850px) {
    .mobile-toggle {
      display: none;
    }
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .bar {
    width: 24px;
    height: 2px;
    background-color: var(--color-primary);
    transition: all 0.3s ease;
  }

  /* Mobile Nav */
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(27, 46, 82, 0.98);
    backdrop-filter: blur(15px);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 999;
  }

  .mobile-nav.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-nav-list {
    list-style: none;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .mobile-nav-link {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: white;
    font-weight: 700;
  }
</style>

<script>
  const mobileToggle = document.getElementById('mobile-toggle');
  const mobileNav = document.getElementById('mobile-nav');
  const header = document.getElementById('main-header');

  mobileToggle?.addEventListener('click', () => {
    mobileNav?.classList.toggle('is-open');
    document.body.style.overflow = mobileNav?.classList.contains('is-open') ? 'hidden' : '';
  });

  mobileNav?.addEventListener('click', (e) => {
    if (e.target === mobileNav) {
      mobileNav.classList.remove('is-open');
      document.body.style.overflow = '';
    }
  });

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });
</script>
